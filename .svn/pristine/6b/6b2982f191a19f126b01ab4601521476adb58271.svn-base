.loader{
	display: block;
	position:fixed;
	width:100%;
 	height:700px;
 	overflow:hidden;
	top:0px;
 	background: rgba(0,0,0,0.3); 
	z-index:9999;
	transition:all .5s ease-in-out;
}
@media screen and (max-width:768px) and (min-width:450px){
	.loader{
	display: block;
	position:fixed;
	width:100%;
 	height:900px; 
 	overflow:hidden;
	background: rgba(0,0,0,0.3);
	z-index:9999;
	transition:all .5s ease-in-out;
}
}
@media screen and (max-width:449px) and (min-width:200px){
	.loader{
	display: block;
	position:fixed;
	width:100%;
	height:400px; 
	overflow:hidden;
	background: rgba(0,0,0,0.3);
	z-index:9999;
	transition:all .5s ease-in-out;
}
}
.loader ul {  
    width: 100%;
	height:100%;
	display:table;
    margin: auto;
    margin-top: 0px;
    list-style: none;
    padding: 0px 0px 0px 0px;
/*     -moz-box-shadow: 0px 0px 4px 0px rgba(0,0,0,0.37); */
/*     box-shadow:      0px 0px 4px 0px rgba(0,0,0,0.37); */
}
.loader ul li {
    width: 100%;
	display:table-cell;
    vertical-align:middle;
    text-align: center;
    background-repeat: no-repeat;
    background-position: center;
 }
.loader ul li img {
    vertical-align: middle;
}
